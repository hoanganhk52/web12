<h1 class="text-center">{{question.content}}</h1>

<p>vote: {{add question.yes question.no}}</p>
<p>yes: {{question.yes }}</p>
<p>no: {{question.no }}</p>

<form method="POST" action="/question?_method=PUT">
    <input type="hidden" name="questionID" value="{{question.id}}"></input>
    <input type="hidden" name="vote" value="yes"></input>
    <button type="submit">Yes</button>
</form>

<form method="POST" action="/question?_method=PUT">
    <input type="hidden" name="questionID" value="{{question.id}}"></input>
    <input type="hidden" name="vote" value="no"></input>
    <button type="submit">No</button>
</form>